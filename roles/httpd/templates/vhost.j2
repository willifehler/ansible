{% for vhost in apache_vhosts %}
<VirtualHost *:80>
    ServerName {{ vhost.servername }} 
    DocumentRoot /var/www/{{ vhost.servername }}
    ErrorLog /var/log/httpd/{{ vhost.servername }}-error.log
    CustomLog /var/log/httpd/{{ vhost.servername }}-access.log combined
</VirtualHost>
{% endfor %}
